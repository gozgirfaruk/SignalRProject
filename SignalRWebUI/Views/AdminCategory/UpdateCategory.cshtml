@model UpdateCategoryUIDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-header">
			<div class="card-title">Kategori Güncelleme Sayfası</div>
		</div>
		<div class="card-body">
			<div class="form-group">
				<form method="post">
					<input type="hidden" asp-for="CategoryID"/>
					<label>Kategori Adı</label>
					<input type="text" class="form-control input-pill" asp-for="Name">
					<br />
					<label>Kategori Durum</label>
					<input type="checkbox"  data-toggle="toggle"  data-style="btn-round" asp-for="Status" />
					<br />

					<div class="card-action">
						<button type="submit" class="btn btn-success">Güncelle</button>
						<a href="/AdminCategory/CategoryList" class="btn btn-danger">Vazgeç</a>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>

